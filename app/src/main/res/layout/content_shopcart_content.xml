<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_shopcart_content"
    tools:context="com.example.user.finalproject.ShopcartContent">

    <include android:id="@+id/app_bar" layout="@layout/app_bar"/>

    <ImageView android:id="@+id/Detail_pictute"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_person_add_black_24dp"
        android:layout_below="@+id/app_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="name"
        android:id="@+id/tv_BookName"
        android:layout_marginTop="53dp"
        android:layout_alignTop="@+id/Detail_pictute"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="price"
        android:id="@+id/tv_BookPrice"
        android:textColor="#600000"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/tv_BookName"
        android:layout_alignRight="@+id/btn_Buy"
        android:layout_alignEnd="@+id/btn_Buy" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="放入購物車"
        android:id="@+id/btn_AddToCart"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/Detail_pictute"
        android:layout_toLeftOf="@+id/btn_AddToFavorite"
        android:layout_toStartOf="@+id/btn_AddToFavorite" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加入我的最愛"
        android:id="@+id/btn_AddToFavorite"
        android:layout_alignTop="@+id/btn_AddToCart"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="購買"
        android:id="@+id/btn_Buy"
        android:layout_alignTop="@+id/btn_AddToFavorite"
        android:layout_toRightOf="@+id/btn_AddToFavorite"
        android:layout_toEndOf="@+id/btn_AddToFavorite" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NT$"
        android:id="@+id/textView8"
        android:textColor="#600000"
        android:layout_alignTop="@+id/tv_BookPrice"
        android:layout_alignLeft="@+id/btn_Buy"
        android:layout_alignStart="@+id/btn_Buy" />

</RelativeLayout>
