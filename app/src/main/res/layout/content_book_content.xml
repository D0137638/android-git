<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_book_content"
    tools:context="com.example.user.finalproject.BookContent">

    <include android:id="@+id/app_bar" layout="@layout/app_bar"/>

    <ImageView android:id="@+id/Detail_pictute"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_person_add_black_24dp"
        android:layout_below="@+id/app_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="name"
        android:id="@+id/tv_BookName"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp"
        android:layout_below="@+id/app_bar"
        android:layout_toRightOf="@+id/Detail_pictute"
        android:layout_toEndOf="@+id/Detail_pictute" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="price"
        android:id="@+id/tv_BookPrice"
        android:textColor="#600000"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/tv_BookName"
        android:layout_alignRight="@+id/tv_BookName"
        android:layout_alignEnd="@+id/tv_BookName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="放入購物車"
        android:id="@+id/btn_AddToCart"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/Detail_pictute"
        android:layout_toLeftOf="@+id/btn_AddToFavorite"
        android:layout_toStartOf="@+id/btn_AddToFavorite"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加入我的最愛"
        android:id="@+id/btn_AddToFavorite"
        android:layout_alignBottom="@+id/btn_AddToCart"
        android:layout_toRightOf="@+id/Detail_pictute"
        android:layout_toEndOf="@+id/Detail_pictute" />
</RelativeLayout>
