<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_login"
    tools:context="com.example.user.finalproject.LoginActivity">

    <include android:id="@+id/app_bar" layout="@layout/app_bar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="輸入您的帳戶"
        android:id="@+id/textView_userid"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/app_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp" />

    <EditText
        android:hint="帳號"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_userid"
        android:layout_below="@+id/textView_userid"
        android:layout_marginTop="32dp"
        android:layout_alignLeft="@+id/textView_userid"
        android:layout_alignStart="@+id/textView_userid" />

    <EditText
        android:hint="密碼"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_password"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/editText_userid"
        android:layout_alignStart="@+id/editText_userid" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登入"
        android:id="@+id/button"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/editText_password"
        android:layout_alignRight="@+id/editText_password"
        android:layout_alignEnd="@+id/editText_password" />
</RelativeLayout>
